<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VideoDurationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">3.5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingEnd">3.5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/shape_time_radius_black_2dp_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="typeface">dinTypeface</item>
    </style>

    <declare-styleable name="TypefaceTextView">
        <attr name="typeface">
            <enum name="fzlLTypeface" value="1" />
            <enum name="fzdb1Typeface" value="2" />
            <enum name="futuraTypeface" value="3" />
            <enum name="dinTypeface" value="4" />
            <enum name="lobsterTypeface" value="5" />
        </attr>
    </declare-styleable>

    <style name="FollowTextView">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">@drawable/shape_follow_radius_black_2dp_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/plus_follow</item>
        <item name="android:textSize">10sp</item>
        <item name="typeface">fzdb1Typeface</item>
    </style>

    <declare-styleable name="NoStatusFooter">
        <attr name="srlPrimaryColor" />
        <attr name="srlAccentColor" />
        <attr name="srlTextSizeTitle" />
        <attr name="srlTextTitleTypeface">
            <enum name="fzlLTypeface" value="1" />
            <enum name="fzdb1Typeface" value="2" />
            <enum name="futuraTypeface" value="3" />
            <enum name="dinTypeface" value="4" />
            <enum name="lobsterTypeface" value="5" />
        </attr>
        <attr name="srlTextNothing" />
    </declare-styleable>
</resources>